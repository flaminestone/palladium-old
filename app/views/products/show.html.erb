<!--/products/1-->
<ul class="pager">
  <li class="previous"><a href=<%= products_path %>><span aria-hidden="true">&larr;</span>Back</a></li>
</ul>
<div class="container">
  <div class="row">
    <div class="page-header">
      <h1><%= @product.name %></h1>
    </div>
  </div>
  <%- model_class = Product -%>
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="status-con">
          <h1>
            <%= model_class.human_attribute_name(:status) %>
            <%= @product.status %>
          </h1>
        </div>
      </div>
      <div class="row">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt><strong><%= model_class.human_attribute_name(:version) %>:</strong></dt>
              <dd><%= @product.version %></dd>
              <dt><strong><%= model_class.human_attribute_name(:update_data) %>:</strong></dt>
              <dd><%= @product.update_data %></dd>
            </dl>
            <table class="table table-hover">
              <%= 'Runs for this product is not found' if @product.runs.empty? %>
              <thead class='runs-title <%= 'hiden' if @product.runs.empty? %>'>
              <tr>
                <th>№</th>
                <th>Date</th>
                <th>Version</th>
                <th>Status</th>
                <th>Last Update</th>
              </tr>
              </thead>
              <% @product.runs.each do |run| %>
                  <tr class='clickable-row' data-href= <%= product_run_path(@product, run) %>>
                    <td><%= run.id %></td>
                    <td><%= run.date %></td>
                    <td><%= run.version %></td>
                    <td><%= run.status %></td>
                    <td><%= run.updated_at %></td>
                  </tr>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <dl class="dl-horizontal">
          <dt><strong><%= model_class.human_attribute_name(:version) %>:</strong></dt>
          <dd><%= @product.version %></dd>
          <dt><strong><%= model_class.human_attribute_name(:update_data) %>:</strong></dt>
          <dd><%= @product.update_data %></dd>
        </dl>
        <table class="table table-hover">
          <%= 'Runs for this product is not found' if @product.runs.empty? %>
          <thead class='runs-title <%= 'hiden' if @product.runs.empty? %>'>
          <tr>
            <th>№</th>
            <th>Date</th>
            <th>Version</th>
            <th>Status</th>
            <th>Last Update</th>
          </tr>
          </thead>
          <% @product.runs.each do |run| %>
              <tr class='clickable-row' data-href= <%= product_run_path(@product, run) %>>
                <td><%= run.id %></td>
                <td><%= run.date %></td>
                <td><%= run.version %></td>
                <td><%= run.status %></td>
                <td><%= run.updated_at %></td>
              </tr>
          <% end %>
        </table>
    <div class="col-md-4">
      <div class="row">
          <div class="row">
            <div class="actions-button">
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          product_path(@product),
                          :method => 'delete',
                          :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                          :class => 'btn btn-danger' %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_product_path(@product), :class => 'btn btn-default' %>
            <%= link_to t('.new', :default => t("helpers.links.new_run")), new_product_run_path(@product), :class => 'btn btn-default' %>
            </div>
            </div>
        </div>
      </div>
    </div>
  </div>

<script>
    jQuery(document).ready(function ($) {
    });
    $(".clickable-row").click(function () {
        window.document.location = $(this).data("href");
    });
</script>

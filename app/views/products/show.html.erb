<div class="container">
  <div class="row">
      <div class="plans-title">
        <span>Plans</span>
      </div>
      <div class="plan-list-box">
        <table class="table table-hover">
          <tbody>
          <% @product.plans.reverse.each do |current_plan| %>
              <tr>
                <td>
                  <div class="plan-name block">
                    <a class="plan-name-link link"  href="<%= product_plan_path(@product, current_plan) %>"><%= current_plan.name %></a>
                  </div>
                </td>
                <td>
                  <div class="plan-data block">
                    <%= current_plan.updated_at %>
                  </div>
                </td>
                <td>
                  <div id="status-bar-<%= current_plan.id %>" style="min-width: 100px; max-width: 100px; height: 36px; margin: 0 auto"></div>
                  <script>
                    $(function () {
                      $("#status-bar-<%= current_plan.id %>").highcharts({
                        navigation: {
                          buttonOptions: {
                            enabled: false
                          }
                        },
                        credits: {
                          enabled: false
                        },
                        tooltip: {
                          enabled: false
                        },
                        chart: {
                          height: 50,
                          width: 250,
                          type: 'bar',
                          backgroundColor: null
                        },
                        title: {
                          text: ''
                        },
                        subTitle: {
                          text: ''
                        },
                        legend: {
                          enabled: false
                        },
                        xAxis: {

                          labels: {
                            enabled: false
                          }
                        },
                        yAxis: {
                          gridLineWidth: 0,
                          labels: {
                            enabled: false
                          },
                          title: {
                            text: ''
                          }
                        },
                        series: <%= @status_data[current_plan.id].to_json.html_safe %>,
                        plotOptions: {
                          series: {
                            stacking: 'normal',
                            animation: false,
                            dataLabels: {
                              enabled: true
                            }
                          }
                        }
                      });
                    });
                  </script>
                </td>
              </tr>
          <% end  %>
          </tbody>
        </table>
      </div>
  </div>
</div>








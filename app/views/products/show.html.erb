<div class="container">
  <div class="page-header">
    <h1><%= @product.name %></h1>
  </div>
  <%- model_class = Product -%>

  <div class="row">
    <div class="row">
      <div class="col-md-8">
        <h1>
          <%= model_class.human_attribute_name(:status) %>
          <%= @product.status %>
        </h1>
      </div>
      <div class="col-md-4">
        <div class="actions-button">
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    product_path(@product),
                    :method => 'delete',
                    :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                    :class => 'btn btn-danger' %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_product_path(@product), :class => 'btn btn-default' %>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-md-4">
        <dl class="dl-horizontal">
          <dt><strong><%= model_class.human_attribute_name(:version) %>:</strong></dt>
          <dd><%= @product.version %></dd>
          <dt><strong><%= model_class.human_attribute_name(:update_data) %>:</strong></dt>
          <dd><%= @product.update_data %></dd>
        </dl>
        <table border="2" cellspacing="50" cellpadding="0">
          <%= 'Items list' unless @product.runs.empty? %>
          <thead class='runs-title <%= 'hiden' %>'>
          <tr bordercolor="black">
            <th>Name</th>
            <th>Status</th>
            <th>Version</th>
          </tr>
          </thead>
          <tbody>
          <tr bordercolor="black">
            <% @product.runs.each do |run| %>
                <td><%= link_to run.date, run_path(run) %></td>
                <th> <%= run.date %> </th>
                <th> <%= run.status %> </th>
                <th> <%= run.version %> </th>
                <th> <%= run.updated_at %> </th>
            <% end %>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

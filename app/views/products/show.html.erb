<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Status:</strong>
  <%= @product.status %>
</p>

<p>
  <strong>Version:</strong>
  <%= @product.version %>
</p>

<p>
  <strong>Update data:</strong>
  <%= @product.update_data %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

<table border="2" cellspacing="50" cellpadding="0">
  <thead>
  <tr bordercolor="black">
    <th>Name</th>
    <th>Status</th>
    <th>Version</th>
    <th>Update data</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <tr bordercolor="black">
    <% @product.runs.each do |run| %>
        <th> <%= run.date %> </th>
        <th> <%= run.status %> </th>
        <th> <%= run.version %> </th>
        <th> <%= run.updated_at %> </th>
    <% end %>
  </tr>

  </tbody>
</table>

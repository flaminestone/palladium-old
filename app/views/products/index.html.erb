<p id="notice"><%= notice %></p>

<h1 align="center">Dashboard</h1>

<table border="2" cellspacing="50" cellpadding="0">
  <thead>
    <tr bordercolor="black">
      <th>Name</th>
      <th>Status</th>
      <th>Version</th>
      <th>Update data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product_path(product) %></td>
        <td><%= product.status %></td>
        <td><%= product.version %></td>
        <td><%= product.update_data %></td>
        <td bgcolor="#add8e6"><%= link_to 'Show', product %></td>
        <td bgcolor="#8fbc8f"><%= link_to 'Edit', edit_product_path(product) %></td>
        <td bgcolor="red"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="container">
  <div class="row">
    <div class="page-header">
      <h1 align="center"><%= t('helpers.titles.admin_settings_title') %></h1>
    </div>
    <div class="col-md-3">
      <div class="row">
        <label></label>
        <ul class="nav nav-pills nav-stacked">
          <li role="presentation">
            <a href="/settings/admin" class="navigation-link"><%= t('helpers.titles.admin_settings_title') %></a></li>
          <li role="presentation"><a href="/settings/status_settings_title" class="navigation-link">Status Settings</a>
          </li>
          <li role="presentation">
            <a href="/settings/tokens" class="navigation-link"><%= t('helpers.titles.token_settings_title') %></a></li>
          <li role="presentation" class="active">
            <a href="/settings/products" class="navigation-link">Change Product Image</a></li>
        </ul>
      </div>
    </div>

    <div class="col-md-9">
      <% @products.each do |product| %>
          <a class="link product-name " style="text-decoration: none;" href=<%= product_path(product) %>>
            <div class="product_item">
              <div class="product_image" style="background: url(http://www.e-reading.club/illustrations/131/131390-square.jpg)  100% 100% no-repeat; background-size: contain;">
              </div>
              <div class="product-name-block">
                <%= product.name %>
              </div>
            </div>
          </a>
      <% end %>
    </div>

  </div>
</div>
<style>
  a.navigation-link:visited {
    color: #333333;
  }
</style>
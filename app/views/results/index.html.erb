
<div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <h3><%= t('helpers.titles.results') %></h3>
        <table class="table table-hover result_table">
          <thead>
          <tr>
            <th>Date</th>
            <th>Author</th>
            <th>Status</th>
          </tr>
          </thead>
          <tbody>
          <% @results.order(created_at: :desc).each do |result| %>
              <tr class="clickable-row"  style="padding: 0px;">
                <td><div class="date block"><%= result.created_at %></div></td>
                <td><div class="author block"><%= result.author %></div></td>
                <td style = "background-color: <%= Status.find(result.status_id).color %>"> <div class="status block"><%= result.message %></div></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>





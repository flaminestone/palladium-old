<div class="container">
  <div class="row">
    <div class="page-header">
      <h1 align="center"><%= t('helpers.titles.admin_settings_title') %></h1>
    </div>
    <div class="col-md-3">
      <div class="row">
        <label></label>
        <ul class="nav nav-pills nav-stacked">
          <li role="presentation" class="active">
            <a href="/settings/admin"><%= t('helpers.titles.admin_settings_title') %></a></li>
          <li role="presentation"><a href="/settings/status_settings_title" class="navigation-link link">Status Settings</a></li>
          <li role="presentation"><a href="/settings/tokens" class="navigation-link link"><%= t('helpers.titles.token_settings_title') %></a></li>
          <li role="presentation"><a href="/settings/products" class="navigation-link link">Change product image</a></li>
        </ul>
      </div>
    </div>
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-4">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
              <%= devise_error_messages! %>

                <%= f.label :email %><br>

                <div class="input-group">
                  <span class="input-group-addon" id="basic-addon1">@</span>
                  <%= f.email_field :email, autofocus: true, :autocomplete => :off, class: 'form-control' %>
                </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

                <%= f.label :Old_password %><br>

                <div class="input-group">
                  <%= f.password_field :current_password, :autocomplete => :off, class: 'form-control' %>
                </div>

                  <%= f.label :New_password %> <i>(leave blank if you don't want to change it)</i><br>

                  <div class="input-group">
                    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
                  </div>

                  <%= f.label :Confirm_new_password %><br>

                  <div class="input-group">
                    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
                  </div>

              <div class="actions">
                <%= f.submit t('helpers.links.update_profile'), class: "btn btn-success actions" %>
              </div>
          <% end %>
        </div>
      </div>
        <div class="panel panel-danger">

          <div class="panel-heading">Delete account</div>
          <div class="panel-body">
            <p>Once you delete your account, there is no going back. Please be certain.</p>
            <%= button_to t("helpers.links.delete_your_account"), registration_path(resource_name), data: {confirm: "Are you sure?"}, method: :delete, class: "btn btn-danger" %>
          </div>
        </div>
    </div>
  </div>
</div>
<style>
  .actions{
    display: inline-block;
    margin-left: 0px;
    margin-top: 10px;
  }
    a.navigation-link:visited{
      color: #333333;
    }

  a.navigation-link{
      color: #333333;
    }
</style>
<div class="container" style="background-color: #101010">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 centered">
      <div class="sing_up_title">
        Sing Up
      </div>
    </div>

  </div>
  <div class="row">
    <div class="col-md-8 col-md-offset-2 centered">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
          <%= f.email_field :email, autofocus: true, :placeholder => 'Email', class: 'email_in_popup field_invert field_size_invert' %>
          <% if @validatable %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br/>
          <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password', class: 'field_invert field_size_invert' %>
          <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Confirm password', class: 'field_invert field_size_invert' %>
          <%= f.submit "Sign up", :class=>'button_invert button-size sing_up_button' %>
    <% end %>
    </div>

  </div>
</div>


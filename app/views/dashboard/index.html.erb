<div class="container">
<div class="row">
  <div class="form-actions text-center">
    <% if user_signed_in? %>
      <span>Hello, <%= current_user.email %></span>
      <%= link_to 'Logout', destroy_user_session_path, :method => :delete %>
  <% else %>
        <%= link_to 'Login', new_user_session_path, :class => 'btn btn-default' %>
        or <%= link_to 'Registration ', new_user_registration_path, :class => 'btn btn-success' %>
  <% end %>
  </div>
</div>
</div>
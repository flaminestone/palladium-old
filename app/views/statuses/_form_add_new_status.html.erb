<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <%= form_for(@status) do |f| %>
          <% if @status.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@status.errors.count, "error") %> prohibited this status from being saved:</h2>

                <ul>
                  <% @status.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="field">
            <%= f.text_field :name, class: "form-control input-lg", type: "text", placeholder: t('helpers.links.status_name') %>
          </div>
          </div>
          <div class="col-md-12">

            <div class="field">
              <%= f.text_field :color, class: "form-control custom", type: "text", placeholder: t('helpers.links.change_color') %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <%= f.submit class: 'btn btn-primary', data_dismiss: "modal" %>
            </div>
      <% end %>
      </div>
      </div>
</div>


<div class="container">
  <div class="row">

    <div class="col-md-4 col-md-offset-3">
      <div class="page-header">
        <h1 align="center"><%= t('helpers.titles.status_settings_title') %></h1>
      </div>
      <%= form_for(@status) do |f| %>
          <% if @status.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@status.errors.count, "error") %> prohibited this status from being saved:</h2>

                <ul>
                  <% @status.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>
          <div class="field">
            <%= f.text_field :name, class: "form-control input-lg", type: "text", placeholder: t('helpers.links.status_name') %>
          </div>
          <div class="field">
            <%= f.text_field :color, class: "form-control custom color_input", type: "text", placeholder: t('helpers.links.change_color')%>
            <div class="color_rect" style="background-color: <%= @status.color %>"></div>
          </div>
          <div class="modal-footer">
            <a type="button" class="btn btn-default" href='/settings/status_settings_title'>Close</a>
            <%= f.submit class: 'btn btn-primary'%>
          </div>
      <% end %>
    </div>
  </div>
</div>

<script>
    //change divs background-color after set some button
    $(".color_input").keyup(function (){
        $('.color_rect').css("background-color",this.value);
    });
</script>


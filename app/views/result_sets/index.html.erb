<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="container jumbotron runs_table">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="page-header sets_hading">
          <h1 align="center"><%= t('helpers.titles.test_results') %></h1>
        </div>
        <div id="container" style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto"></div>
        <h3><%= t('helpers.titles.results') %></h3>
        <table class="table table-hover sets_table">
          <thead>
          <tr>
            <th><%= @result_sets.human_attribute_name(:name) %></th>
            <th><%= @result_sets.human_attribute_name(:version) %></th>
          </tr>
          </thead>
          <tbody>
          <% @result_sets.order(name: :desc).each do |result| %>
              <tr class="clickable-row run_str" data-href="<%= "#{request.original_url }/#{result.id}/results" %>">
                <td><%= result.name %></td>
                <td><%= result.version %></td>
                <td>
                  <div id="status-bar-<%= result.id %>" style="min-width: 100px; max-width: 100px; height: 50px; margin: 0 auto"></div>
                </td>
              </tr>
              <script>
                  $(function () {
                      $("#status-bar-<%= result.id %>").highcharts({
                          navigation: {
                              buttonOptions: {
                                  enabled: false
                              }
                          },
                          credits: {
                              enabled: false
                          },
                          tooltip: {
                              enabled: false
                          },
                          chart: {
                              height: 50,
                              width: 250,
                              type: 'bar',
                              backgroundColor: null
                          },
                          title: {
                              text: ''
                          },
                          subTitle: {
                              text: ''
                          },
                          legend: {
                              enabled: false
                          },
                          xAxis: {

                              labels: {
                                  enabled: false
                              }
                          },
                          yAxis: {
                              gridLineWidth: 0,
                              labels: {
                                  enabled: false
                              },
                              title: {
                                  text: ''
                              }
                          },
                          legend: {
                              enabled: false
                          },
                          series: [{name: 'John', data: [5], color: '#FFAAAA'},
                                   {name: 'Jane', data: [2], color: '#FFBBBB'},
                                   {name: 'Joe', data: [3], color: '#FFEEEE'}],
                          plotOptions: {
                              series: {
                                  stacking: 'normal',
                                  dataLabels: {
                                      enabled: true
                                  }
                              }
                          }
                      });
                  });
              </script>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#container').highcharts({
            navigation: {
                buttonOptions: {
                    enabled: false
                }
            },
            chart: {
                backgroundColor: 'rgba(225, 225, 225, 0)',
                plotBackgroundColor: null,
                plotBorderWidth: 0,
                plotShadow: false
            },
            title: {
                text: 'Browser<br>shares',
                align: 'center',
                verticalAlign: 'middle',
                y: 50
            },
            tooltip: {
                pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
            },
            plotOptions: {
                pie: {
                    dataLabels: {
                        enabled: true,
                        distance: -50,
                        style: {
                            fontWeight: 'bold',
                            color: 'white',
                            textShadow: '0px 1px 2px black'
                        }
                    },
                    startAngle: -90,
                    endAngle: 90,
                    center: ['50%', '75%']
                }
            },
            series: [{
                type: 'pie',
                name: 'Browser share',
                innerSize: '50%',
                data: [{name: 'Others',
                        y: 40,
                        color: '#FFAAAA'}
                ]
            }]
        });
    });

    jQuery(document).ready(function ($) {
        $(".clickable-row").click(function () {
            window.document.location = $(this).data("href");
        });
    });
</script>
<p id="notice"><%= notice %></p>

<h1>Listing Plans</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Version</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.name %></td>
        <td><%= plan.version %></td>
        <td><%= link_to 'Show', product_plan_path(plan.product, plan) %></td>
        <td><%= link_to 'Edit', edit_product_plan_path(plan.product, plan) %></td>
        <td><%= link_to 'Destroy', product_plans_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plan', new_product_plan_path() %>
